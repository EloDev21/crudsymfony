{% extends "base.html.twig" %}

{% block titre %}Détail du circuit
{% endblock %}
{% block css %}
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>

	<link rel="stylesheet" href="{{ asset('assets/css/nav.css') }}">

	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
{% endblock %}
{% block contenu %}

	<div class="container mt-4 mb-4">
		<div class="row mt-2 mb-4">


			<div class="col md-8">
				<img src="{{circuit.photo}}" class="card-img-top" alt="...">
			</div>
			<div class="col md-4 jumbotron">
				<h1 class="text-center" style="color:wheat">{{circuit.title}}</h1>
				<p>{{circuit.description |nl2br}}</p>
				<div class="text-primary" style="font-size: 4rem;font-weight:bold; ">{{circuit.price}}€
                        &nbsp;&nbsp;<a href="{{ path('cart_add', {id:circuit.id}) }}" class="btn btn-warning">Ajouter au panier</a>
			</div>
                        </div>

		</div>
		
	{% endblock %}
