{% extends 'base.html.twig' %}

{% block titre %}Nous contacter
{% endblock %}
{% block css %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog==" crossorigin="anonymous"/>
	<link rel="stylesheet" href="{{ asset('assets/css/nav.css') }}">

{% endblock %}

{% block contenu %}
	<div class="container mt-5 mb-5">
		<h1 class="text-center">
			Formulaire de contact
		</h1>
		{{ form_start(formContact) }}

		<div class="row">

			<div class="col">
				{{form_label(formContact.sujet, 'Sujet:')}}

				<div class="col">
					{{form_widget(formContact.sujet)}}
				</div>
			</div>
			<div class="row">

				<div class="col">
					{{form_label(formContact.name,'Pr√©nom - Nom ')}}

					<div class="col">
						{{form_widget(formContact.name)}}
					</div>
					<div class="row">

						<div class="col">
							{{form_label(formContact.email,'Adresse email')}}

							<div class="col">
								{{form_widget(formContact.email)}}
							</div>
							<div class="row">

								<div class="col">
									{{form_label(formContact.message,'Entrez votre message')}}

									<div class="col">
										{{form_widget(formContact.message)}}
									</div>
									<br>
									<input class="btn btn-warning  mt-5 mb-5 center" type="submit" value="Envoyer le mail.">

									{{form_end(formContact)}}
									</div><br>
							{% endblock %}
