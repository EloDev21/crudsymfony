<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block titre %}Welcome!
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle`
														           and uncomment the following Encore helpers to start using Symfony UX #}
		{% block css %}

			{# bootstrap5 css #}
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>

			<link rel="stylesheet" href="{{ asset('assets/css/nav.css') }}">

		{% endblock %}

		{% block js %}{% endblock %}
	</head>
	<body style="background: linear-gradient(75deg, #ffcb69,#fb8b24, #78290f),linear-gradient(142deg, transparent, white),linear-gradient(108deg, red, transparent);
	min-height: 100%;">
		<nav>
			<div class="logo">

				<a href="{{path('accueil')}}">
					<img src="{{asset('assets/img/logo2.png')}}" class="logo" alt="">
				</a>
			</div>
			<input type="checkbox" id="click">
			<label for="click" class="menu-btn">
				<i class="fas fa-bars"></i>
			</label>
			<ul style="z-index:7">
				<li style="z-index:7">
					<a href="{{path('accueil')}}">
						<i class="fas fa-home navbar-icon"></i>
						ACCUEIL</a>
				</li>
				<li>
					<a href="{{path('circuits')}}">
						<i class="fas fa-folder navbar-icon"></i>
						Circuits</a>
				</li>
				<li>
					<a href="{{path('register')}}">
						<i class="fas fa-user-tie navbar-icon"></i>
						SignIn/Up</a>
				</li>
				<li>
					<a href="{{path('contact')}}">
						<i class="fas fa-question navbar-icon"></i>
						about</a>
				</li>
				<li>
					<a href="{{path('contact')}}" class="btn btn-secondary">
						<i class="fas fa-phone navbar-icon"></i>
						Contact</a>
				</li>
				{% if is_granted('ROLE_ADMIN','ROLE_CUSTOMER') %}
					<li>
						<a href="" class="panier" type="btn btn-info">
							<i class="fas fa-shopping-basket navbar-icon"></i>
							Panier</a>
					</li>
				{% endif %}
				{% if is_granted('ROLE_ADMIN','ROLE_CUSTOMER')%}
			
					<li>
						<a href="{{path('app_logout')}}" class="active" type="btn btn-danger" class="btn btn-danger">
							<i class="fas fa-sign-out-alt navbar-icon"></i>
							LogOut</a>
					</li>
				{% endif %}
			
			</ul>
		</nav>

		{% block contenu %}{% endblock %}

	<!-- Footer -->
<footer class="bg-dark text-center text-white">
<!-- Grid container -->
<div class="container p-2">
  <!-- Section: Social media -->
  <section class="mb-1">
	<!-- Facebook -->
	<a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"
	  ><i class="fab fa-facebook-f"></i
	></a>

	<!-- Twitter -->
	<a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"
	  ><i class="fab fa-twitter"></i
	></a>

	<!-- Google -->
	<a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"
	  ><i class="fab fa-google"></i
	></a>

	<!-- Instagram -->
	<a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"
	  ><i class="fab fa-instagram"></i
	></a>

	<!-- Linkedin -->
	<a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"
	  ><i class="fab fa-linkedin-in"></i
	></a>

	<!-- Github -->
	<a class="btn btn-outline-light btn-floating m-1" href="#!" role="button"
	  ><i class="fab fa-github"></i
	></a>
  </section>
  <!-- Section: Social media -->

</div>
<!-- Grid container -->

<!-- Copyright -->
<div class="text-center p-3" style="background-color: rgba(0, 0, 0, 0.2);">
  © 2021 Copyright - Tous droits réservés - 
  <a class="text-white" href="https://senesafari.fr/">senesefari.com</a>
</div>
<!-- Copyright -->

<!-- Footer -->
	</footer>
	
	</body>
</html>
