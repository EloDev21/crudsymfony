{% extends 'base.html.twig' %}

{% block titre %}S'inscrire{% endblock %}
{% block css %}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
	<link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro:wght@400;700&display=swap" rel="stylesheet">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.14.0/css/all.min.css" integrity="sha512-1PKOgIY59xJ8Co8+NE6FZ+LOAZKjy+KY8iq0G4B3CyeY6wYHN3yt9PW0XpSriVlkMXe40PTKnXrLnZ9+fkDaog==" crossorigin="anonymous"/>
	<link rel="stylesheet" href="{{ asset('assets/css/nav.css') }}">

{% endblock %}
{% block contenu %}
<div class="container">
<main>
    <h1>Créer un espace personnel - S'inscrire</h1>
    <a href="{{path('app_login')}}">Déja inscrit, Se connecter?</a>
    {{ form_start(registrationForm) }}
   
        {{ form_row(registrationForm.name, {
            label:' Entrez votre nom et prénom'
        }) }}<br>
        {{ form_row(registrationForm.email,{
            label:' Entrez un adresse e-mail valide '
        }) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Entrez un mot de passe (min 6 charactères)'
        }) }}
      

        <button type="submit" class="btn btn-success">S'incrire</button>
 
    {{ form_end(registrationForm) }}
    </main>
</div>
{% endblock %}
